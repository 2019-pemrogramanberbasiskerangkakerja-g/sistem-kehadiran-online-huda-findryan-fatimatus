{% extends "layouts/layout.njk" %}
{% set page_title = "Dashboard" %}

{% block main %}
<section class="hero-banner magic-ball">
	<div class="container">
		<div class="row align-items-center text-center text-md-left">
			<div class="col-lg-12 col-xl-12" style="text-align: center; color: black; font-weight: bold; font-size: 20px " >
				FORM ABSENSI KELAS 
			</div>
			<div class="col-lg-12 col-xl-12" style="text-align: center; color: 	#0000CD; font-weight: bold; " >
				{{nama}}<br>{{username}}
			</div>
			<div class="col-lg-10 col-xl-10 align-self-center mb-8 mb-lg-0">
			</div>
			<br>
			<br>
			<div class="col-lg-12 col-xl-12 align-self-center mb-2 mb-lg-0">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">No</th>
							<th scope="col">Kelas</th>
							<th scope="col">Hari</th>
							<th scope="col">Waktu Awal</th>
							<th scope="col">Waktu Akhir</th>
							<th scope="col">Ruangan</th>
							<th scope="col">Option</th>
						</tr>
					</thead>

					<tbody>
						{% for matkul in matkuls %}
						<tr>
							<th scope="row">1</th>
							<td>{{matkul.nama}}</td>
							<td>{{matkul.hari}}</td>
							<td>{{matkul.waktu_awal}}</td>
							<td>{{matkul.waktu_akhir}}</td>
							<td>{{matkul.ruang}}</td>
							<button disabled class="btn btn-success">ABSEN</button>>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>
<br>
{% endblock %}